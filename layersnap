#!/bin/bash

# libs
source /home/ckn/layersnap/params
source /home/ckn/layersnap/actions

# paths and vars
TargetName="$(basename $TargetDir)"
PoolDir="$(dirname $TargetDir)/.layersnap/$TargetName"
DateFormat="+%s" #"%Y-%m-%d_%H:%M"

#
# conntroller
#
# status, prepare, snapshot, merge or restore?
#

case $ACTION in

  # status
  status)
    ls_status
  ;;

  # prepare
  prepare)
    ls_prepare
  ;;
  
  # snapshot
  snapshot)
    # prepare target for snapshot first?
    if [ ! -d "$PoolDir" ]; then echo "### testdings"; fi
    echo "$PoolDir"
    if [ ! -d "$PoolDir" ]; then ls_prepare; fi
    ls_snapshot
  ;;
  
  #merge
  merge)
    if [ -d "$PoolDir" ]; then
      ls_merge
    else
      echo ERROR: $TargetDir is not layersnapped, so nothing to merge!
    fi
  ;;
  
  #restore
  restore)
    if [ -d "$PoolDir" ]; then
      ls_restore
    else
      echo ERROR: $TargetDir is not layersnapped, so nothing to restore!
    fi
  ;;
  
esac


# DIR=a; umount -R .layersnap/$DIR/*/merge; rm -R $DIR .layersnap/; mkdir $DIR; touch $DIR/f; layersnap -s $DIR

