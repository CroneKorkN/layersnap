# DIR=target; cp -R nextcloud/* $target; umount -R .layersnap/$DIR/*/merge; rm -R $DIR .layersnap/; mkdir $DIR; touch $DIR/f; layersnap -s $DIR; cp -R phpBB3/* $target;
