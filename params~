#!/bin/bash

# "-" params
ACTION=status
while [[ $# -gt 1 ]]
do
  key="$1"
  case $key in
    -p|--prepare)
    ACTION=prepare 
    shift
    ;;

    -s|--snapshot)
    ACTION=snapshot
    shift
    ;;

    -r|--restore)
    ACTION=restore
    VALUE="$2"
    shift
    ;;

    -m|--merge)
    ACTION=merge
    shift
    ;;
  esac
done

# last param
if [[ -n $1 ]]; then
  #TargetDir=$(realpath $1)
  TargetDir="$(pwd)/$1"
else
  echo "ERROR: please provide a target-dir!"
fi

