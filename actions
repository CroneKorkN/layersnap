#!/bin/bash

ls_status() {
  BASEDIR=$(basename $DIR)
  CONFDIR="$(dirname $DIR)/.layersnap/$BASEDIR"
  
  echo $CONFDIR

  if [ -d "$CONFDIR" ]; then
    echo "$DIR is layersnapped!"
  else
    echo "$DIR is not layersnapped."
  fi
}

ls_snapshot() {
 echo 1
}

ls_merge() {
  1
}

ls_restore() {
  1
}
